<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SubdomainEnum">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label 
    Text="Domain Enumeration"
    FontSize="18"
    SemanticProperties.HeadingLevel="Level2" />

            <Entry 
    Placeholder="Enter domain"
    x:Name="DomainEntry"
    Keyboard="Text" />

            <Button 
    Text="Enumerate Subdomains"
    HorizontalOptions="Fill"
    Clicked="OnDomainEnumerationClicked" />

            <!-- Add results section here -->
            <CollectionView x:Name="DomainResultsCollectionView" 
                ItemsSource="{Binding DomainResults}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Subdomain}" FontSize="16" />
                                <Label Text="{Binding Details}" FontSize="14" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>